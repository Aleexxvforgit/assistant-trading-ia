{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "types": ["vue", "@types/node @nuxt/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "components",
    "pages",
    "composables",
    "utils",
    "layouts",
    "server",
    "nuxt.config.ts"
  ]
}
